@model IEnumerable<ProyectoV_Vuelos.Models.PaisModel>

@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PAISID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Consec_Pais)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodPais)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PAISID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Consec_Pais)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CodPais)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        <img src="@Html.DisplayFor(modelItem => item.Imagen)" width="70px" height="50px" alt="Bandera">
    </td>
    <td>
        @Html.ActionLink("Editar", "Actualizar", new { id = item.PAISID }, null) |
        @Html.ActionLink("Detalles", "Detalles", new { id = item.PAISID }, null) |
        @Html.ActionLink("Eliminar", "Eliminar", new { id = item.PAISID }, new { @Class = "MEliminar" })
    </td>
</tr>}

</table>

<br></br>

<center>

    <a class="btn btn-default" @Html.ActionLink("Generar ", "Generar")</a>

    <a class="btn btn-default" @Html.ActionLink("Regresar", "Index", "Home", new { area = "" }, null)</a>

</center>

@section scripts{

    <script>
        $(".MEliminar").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar el Pais?')) {
                event.preventDefault();
            }
        });
    </script>
}