@model ProyectoV_Vuelos.Models.SeguridadModel


@{
    ViewBag.Title = "Tropical Airlines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="text-center">Cambiar Contraseña</h3>
        <hr />


        <br />

        <center>
            <div class="form-group">
                <h5 class="control-label col-md-3"><img src="~/Content/icons/181501-interface/181501-interface/svg/shield-1.svg" width="25" height="25" /> Contraseña Antigua</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                </div>
            </div>


            <br />

            <div class="form-group">
                <h5 class="control-label col-md-3"><img src="~/Content/icons/181501-interface/181501-interface/svg/padlock.svg" width="25" height="25" /> Nueva Contraseña</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.newcontrasena, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.newcontrasena, "", new { @class = "text-danger" })
                </div>
            </div>


            <br />

            <div class="form-group">
                <h5 class="control-label col-md-3"><img src="~/Content/icons/181501-interface/181501-interface/svg/padlock.svg" width="25" height="25" /> Confirmar Contraseña</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.newcontrasena2, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.newcontrasena2, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <img src="~/Content/icons/181501-interface/181501-interface/svg/settings.svg" width="25" height="25" />
                    <input type="submit" value="Cambiar Contraseña" class="btn btn-default border" />
                </div>
                <br>
                <div class="col-md-offset-2 col-md-10">
                    <a class="btn btn-default border" @Html.ActionLink("Cancelar", "Index", "Home", new { area = "" }, null)
                </div>
            </div>
        </center>
    </div>
}


