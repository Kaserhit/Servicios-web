@model IEnumerable<ProyectoV_Vuelos.Models.SeguridadModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ver Usuarios</h2>


<table class="table">
    <tr>
        <th>
            Lista de Usuarios
        </th>

        <th>
            Lista de Roles
        </th>

        <th></th>
    </tr>

@foreach (var item in Model)
{
<tr>
    <td>

        <a class="btn btn-default" value="Seleccionar" id="Seleccionar"> @Html.DisplayFor(modelItem => item.Usuario)</a>

    </td>
    <td>

        @{

            if (item.ID_Rol == 1)
            {
                <span> Administrador </span>
            }
            if (item.ID_Rol == 2)
            {
                <span> Seguridad </span>
            }
            if (item.ID_Rol == 3)
            {
                <span> Consecutivo </span>
            }
            if (item.ID_Rol == 4)
            {
                <span> Mantenimiento </span>
            }
            if (item.ID_Rol == 5)
            {
                <span> Consulta </span>
            }
            if (item.ID_Rol == 6)
            {
                <span> Cliente </span>
            }


        }
    </td>

    <td>
        @Html.ActionLink("Editar", "Actualizar", new { id = item.USRID }, null) |
        @Html.ActionLink("Detalles", "Detalles", new { id = item.USRID }, null) |
    </td>
</tr>
}

</table>

<center>

    <a class="btn btn-default" @Html.ActionLink("Regresar", "Index", "Home", new { area = "" }, null)</a>

</center>