@model IEnumerable<ProyectoV_Vuelos.Models.ErrorModel>

@{
    ViewBag.Title = "Consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consulta de Errores</h2>

@using (Html.BeginForm("Busqueda", "ErrorCRUD", FormMethod.Post))
{
    <form class="form-group">

        <div>
            <div>
                <div>
                    <div class="form-group mb-1">
                        <label class="font-weight-bold">Fecha Inicio</label>
                    </div>
                </div>
                <div class="form-group">
                    @Html.TextBox("fechainicio", "", new { @class = "form-control" })
                </div>
            </div>

            <div>
                <div>
                    <div class="form-group mb-1">
                        <label class="font-weight-bold">Fecha Final</label>
                    </div>
                </div>
                <div class="form-group">
                    @Html.TextBox("fechafinal", "", new { @class = "form-control" })
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-dark mb-3">Buscar</button>

    </form>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Num_Error)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mensaje_Error)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Num_Error)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mensaje_Error)
                </td>
            </tr>
        }
    }
    </table>

<br></br>

<center>

    <a class="btn btn-dark" @Html.ActionLink("Regresar", "Index", "Home", new { area = "" }, null)</a>
    <a class="btn btn-dark" @Html.ActionLink("Mostrar Todos", "Consulta", "ErrorCRUD", new { area = "" }, null)</a>

</center>
