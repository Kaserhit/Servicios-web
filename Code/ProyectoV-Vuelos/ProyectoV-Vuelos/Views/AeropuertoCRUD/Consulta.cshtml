@model IEnumerable<ProyectoV_Vuelos.Models.AeropuertosModel>

@{
    ViewBag.Title = "Tropical Airlines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<center><h2>Consultas de Puertas de Aeropuertos</h2></center>

<hr>

<br />

<table class="table">
    <tr>
        <th>
            Codigo de Puerta
        </th>
        <th>
            Numero de Puerta
        </th>
        <th>
           Estado
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_Puerta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num_Puerta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detalle)
                </td>
            </tr>
        }
    }

</table>

<br></br>

<center>

    <a class="btn btn-default" @Html.ActionLink("Regresar", "Index", "Home", new { area = "" }, null)</a>

</center>
