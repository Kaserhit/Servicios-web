@model IEnumerable<ProyectoV_Vuelos.Models.AeropuertosModel>

@{
    ViewBag.Title = "Consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consultas de Puertas de Aeropuerto</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cod_Puerta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Num_Puerta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_Puerta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num_Puerta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detalle)
                </td>
            </tr>
        }
    }

</table>

<br></br>

<center>

    <a class="btn btn-default" @Html.ActionLink("Regresar", "Index", "Home", new { area = "" }, null)</a>

</center>
