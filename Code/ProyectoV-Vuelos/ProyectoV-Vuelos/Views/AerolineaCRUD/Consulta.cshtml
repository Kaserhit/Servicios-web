@model IEnumerable<ProyectoV_Vuelos.Models.AerolineasModel>

@{
    ViewBag.Title = "Consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consultas de Aerolineas</h2>

@using (Html.BeginForm("Busqueda", "AerolineaCRUD", FormMethod.Post))
{

    <div class="row">
        <div class="col-sm-13">
            <div class="col-md-2">
                <h4 class="control-label">Buscar por país:</h4>
            </div>
            <div class="col-sm-3">
                @Html.TextBox("id", "", new { @class = "form-control" })
            </div>
            <div>
                <input type="submit" value="Buscar" class="btn btn-default">
            </div>
        </div>
    </div>

    @*<left>
            <table class="col-sm-12">
