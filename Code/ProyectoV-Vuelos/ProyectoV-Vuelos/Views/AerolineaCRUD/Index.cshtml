@model IEnumerable<ProyectoV_Vuelos.Models.AerolineasModel>

@{
    ViewBag.Title = "Tropical Airlines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>Aerolineas</h2></center>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Imagen)" width="70px" height="50px" alt="Logo">
                </td>
                <td>
                    @Html.ActionLink("Editar", "Actualizar", new { id = item.ALNID }, null) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.ALNID }, new { @Class = "MEliminar" })
                </td>
            </tr>
        }
    }

</table>

<br />

<center>

    <a class="btn btn-default border" @Html.ActionLink("Generar ", "Generar")</a>

    <a class="btn btn-default border" @Html.ActionLink("Regresar", "Index", "Home", new { area = "" }, null)</a>

</center>

@section scripts{

    <script>
        $(".MEliminar").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar la Aerolinea?')) {
                event.preventDefault();
            }
        });
    </script>
}
