@model IEnumerable<ProyectoV_Vuelos.Models.BitacorasModel>

@{
    ViewBag.Title = "Detalle_Vuelo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string valor = "";
}

<center><h2>Detalle del Vuelo</h2></center>

<hr>

<br />

<table class="table">
    <tr>
        <th>
            Vuelo
        </th>
        <th>
            Aerolínea
        </th>
        <th>
            @if (valor != "")
            {
                @Html.DisplayNameFor(model => model.Destino)
            }
            else
            {
                @Html.DisplayNameFor(model => model.Procedencia)
            }
        </th>
        <th>
            Fecha
        </th>
        <th>
            Estado
        </th>
        <th>
            Puerta
        </th>
        <th>
            Monto
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    { 
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @if (item.Destino != "")
                {
                    valor = item.Destino;
                    @Html.DisplayFor(modelItem => item.Destino)
                }

                else
                {
                    @Html.DisplayFor(modelItem => item.Procedencia)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Vuelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Num_Puerta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
        </tr>
    }

</table>

<br />

<center>

    <a class="btn btn-dark" @Html.ActionLink("Regresar", "Consulta", "BitacoraCRUD", new { area = "" }, null)</a>

</center>
